<form
  data-errors='{{{ json errors }}}'
  action=
    {{#if this.isNew }}
      "/celebrities/create"
    {{else}}
      "/celebrities/{{ this._id }}/update"
    {{/if}}
  method="post">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" value="{{ this.name }}">
  </div>

  <div class="form-group">
    <label for="occupation">Occupation</label>
    <input type="text" class="form-control" id="occupation" placeholder="Enter occupation" name="occupation" value="{{ this.occupation }}">
  </div>

  <div class="form-group">
    <label for="catchPhrase">catchPhrase</label>
    <input type="text" class="form-control" id="catchPhrase" placeholder="Enter catchPhrase" name="catchPhrase" value="{{ this.catchPhrase }}">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
